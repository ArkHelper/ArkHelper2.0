<Page x:Class="ArkHelper.Pages.NewUserList.SCHT"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArkHelper.Pages.NewUserList" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SCHT">

    <Grid>
        <Grid>
            <WrapPanel x:Name="wrap1"  Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40">
                <TextBlock HorizontalAlignment="Center" FontSize="48" Text="是否要启用SCHT？"/>
                <WrapPanel HorizontalAlignment="Center">
                    <CheckBox Click="checkbox_Click" IsChecked="True" x:Name="checkbox" />
                    <TextBlock Margin="15,0,0,2" Width="500" TextWrapping="Wrap" FontSize="15" Foreground="Gray" Text="SCHT是一个自动化的定时任务系统，可以定时收取基建物品、线索交流、使用信用点、指挥作战、进行剿灭作战等。SCHT允许自定义游戏区服、作战内容等参数，对防沉迷账号也提供了良好的支持。"/>
                </WrapPanel>
            </WrapPanel>
        </Grid>
    </Grid>
</Page>
