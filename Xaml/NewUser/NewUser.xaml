<Window x:Class="ArkHelper.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="CanMinimize"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkHelper" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" Loaded="Window_Loaded" Unloaded="Window_Unloaded"
        Title="ArkHelper" Height="520" Width="845" Background="White">
    <Grid>
        <Frame x:Name="PagesNavigation" NavigationUIVisibility="Hidden" />
        <Button Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                x:Name="next"
                Click="next_Click"
                ToolTip="下一步"
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Margin="0,0,50,50" 
                Style="{DynamicResource MaterialDesignIconButton}" 
                Cursor="Hand"
                IsEnabled="False">
            <materialDesign:PackIcon
                Kind="ChevronRight"
                x:Name="next_icon" />
        </Button>
    </Grid>
</Window>