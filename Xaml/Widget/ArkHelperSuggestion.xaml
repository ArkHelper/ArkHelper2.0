<Page x:Class="ArkHelper.Xaml.Widget.ArkHelperSuggestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArkHelper.Xaml.Widget" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArkHelperSuggestion">

    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <materialDesign:PackIcon 
                            Height="70" Width="70"
                            DockPanel.Dock="Top"
                            HorizontalAlignment="Center"
                            Kind="Idea"/>
        <TextBlock 
                            HorizontalAlignment="Center"
                            TextAlignment="Center"
                            FontSize="18">
                            <Run>ArkHelper建议</Run>
                            <LineBreak></LineBreak>
                            <Run FontSize="14" Foreground="LightGray">无建议</Run>
        </TextBlock>
    </WrapPanel>
</Page>
